<%= javascript_include_tag :defaults %>

<h1>Name suggestions</h1>


<table>
  <tr>
    <th>Votes</th>
    <th>&nbsp;</th>
    <th>Name</th>
  </tr>
  <tr>
    <td></td>
    <td></td>
    <td colspan=4>
    <% form_for :suggestion do |form| %>
      <%= form.text_field :name %>
      <%= form.submit "Create" %>
    <% end %>
    </td>
  </tr>


<% for name in @suggestions %>
  <tr>
    <td>
      <span id="suggestion<%= name.id.to_s %>">
        <%=name.votes%>
    </span></td>
    <td><%= link_to '&uArr',
            { :action => 'modify_votes', 
              :id => name.id, 
              :by => 1 },
            :update => "suggestion" + name.id.to_s %>
   <%= link_to '&dArr',
            { :action => 'modify_votes', 
              :id => name.id, 
              :by => -1 },
            :update => "suggestion" + name.id.to_s %>
    </td>
    <td><%=h name.name %></td>
    <td><%=h name.sex %></td>
    <td><%=h name.desc %></td> 
    <td>(<%= link_to 'Edit', edit_suggestion_path(name) %>) 
        <span id="hidedelete" >
          <%= link_to 'Destroy', name, 
                      :confirm => 'Are you sure?', 
                      :method => :delete %>
        </span>
    </td>
    <!--<td><%= link_to 'Show', name%></td>-->
  </tr>
<% end %>
</table>


<br />

<%= link_to 'Add a new suggestion', new_suggestion_path %>

